<!-- FORM -->

<div class="bg-dark">
  <div class="container">


    <h1>conversemos</h1>
    <form>
      <div class="row">

        <div class=" col mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" name="nombre" class="form-control" id="nombre">
        </div>

        <div class=" col mb-3">
          <label for="apellido" class="form-label">Apellido</label>
          <input type="text" name="apellido" class="form-control" id="apellido">
        </div>

      </div>

      <div class="row">

        <div class="mb-3 col">
          <label for="mail" class="form-label">Email</label>
          <input type="email" id="mailInput" class="form-control" id="mail" aria-describedby="emailHelp">
          <div id="mailMessage" class="form-text"></div>

        </div>

        <div class="mb-3 col">
          <label for="telefono" class="form-label">Teléfono</label>
          <input type="number" class="form-control" id="telefono">
        </div>

      </div>

      <div class="mb-3">
        <label for="textArea" class="form-label">Cuéntanos</label>
        <textarea class="form-control" id="textArea" rows="4"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Enviar</button>


    </form>

  </div>

</div>